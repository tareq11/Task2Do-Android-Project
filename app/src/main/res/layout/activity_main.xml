<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rl"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tareq.tasks2do.MainActivity">


    <Button
        android:id="@+id/all"

        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:backgroundTint="@android:color/darker_gray"
        android:drawableLeft="@drawable/ic_all"
        android:layout_marginTop="20dp"
        android:text="@string/all"
        android:textSize="24sp"
        android:onClick="showListOfTasks"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/home"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:drawableLeft="@drawable/ic_homeicon"
        android:text="@string/home"
        android:textSize="24sp"
        android:onClick="showListOfTasks"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/college"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:drawableLeft="@drawable/ic_collegeicon"
        android:text="@string/college"
        android:textSize="24sp"
        tools:ignore="MissingConstraints"
        android:onClick="showListOfTasks"

        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/work"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:drawableLeft="@drawable/ic_workicon"
        android:text="@string/work"
        android:textSize="24sp"
        tools:ignore="MissingConstraints"
        android:onClick="showListOfTasks"

        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/others"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:drawableLeft="@drawable/ic_other"
        android:text="@string/others"
        android:textSize="24sp"
        tools:ignore="MissingConstraints"
        android:onClick="showListOfTasks"

        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="0dp" />


    <ImageView
        android:id="@+id/setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/setting"
        android:onClick="settingFragment"
        />



</android.support.v7.widget.LinearLayoutCompat>
